		"@vitejs/plugin-vue-jsx": "^3.1.0",
		"@vitest/coverage-v8": "^1.6.1",
		"@vue/test-utils": "^2.4.5",
		"@vue/tsconfig": "^0.5.1",
		"cross-env": "^7.0.3",
		"cssnano": "^7.0.1",
		"jsdom": "^24.0.0",
		"npm-run-all": "^4.1.5",
		"postcss-color-mix": "^1.1.0",
		"postcss-each": "^1.1.0",
		"postcss-each-variables": "^0.3.0",
		"postcss-for": "^2.1.1",
		"postcss-nested": "^6.2.0",
		"prettier": "^3.2.5",
		"release-it": "^18.1.2",
		"rollup": "^4.18.0",
		"shelljs": "^0.8.5",
		"typescript": "^5.4.5",
		"vite": "^5.4.14",
		"vite-plugin-dts": "^3.9.1",
		"vitest": "^1.6.1",
		"vue-i18n": "^11.1.2",
		"vue-tsc": "^1.8.27"
	},
