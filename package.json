{
	"name": "veyra-monorepo",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev": "pnpm --filter @veyra/play dev",
		"story": "pnpm --filter @veyra/play storybook",
		"docs:dev": "pnpm --filter @veyra/docs dev",
		"docs:build": "cross-env NODE_ENV=production pnpm build && pnpm --filter @veyra/docs build",
		"test": "pnpm --filter @veyra/components test",
		"build": "run-s build-hooks build-components",
		"build-components": "cross-env NODE_ENV=production pnpm --filter veyra build",
		"build-hooks": "cross-env NODE_ENV=production pnpm --filter @veyra/hooks build",
		"build:dev": "run-s build-hooks:dev build-components:dev",
		"build-components:dev": "cross-env NODE_ENV=development pnpm --filter veyra build:watch",
		"build-hooks:dev": "cross-env NODE_ENV=development pnpm --filter @veyra/hooks build"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.4.1",
	"devDependencies": {
		"@types/lodash-es": "^4.17.12",
